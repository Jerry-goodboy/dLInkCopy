{
  "manifest_version": 2,

  "name": "dLinkCopy",
  "description": "Copy one page of all Magnet URI links",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.btwalk.com/*"],
      "js": ["js/jquery.js", "js/findOut.js"]
    }
  ],
  "background": {
    "scripts": [
      "js/saveData.js"
    ]
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}
